<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    tools:context=".SigninActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/signin_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_arrow_back_32"/>


    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginVertical="64dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="32dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="18dp">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/barber_pole"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="32dp"/>

            <TextView
                android:layout_width="164dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/freestyle_script_regular"
                android:text="Barbershop"
                android:textColor="@color/black"
                android:textSize="54sp" />

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/barber_pole"
                android:layout_alignParentRight="true"
                android:layout_marginRight="32dp"/>

        </RelativeLayout>


        <EditText
            android:id="@+id/signinPhoneNumberEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="32dp"
            android:hint="Phone Number"
            android:backgroundTint="#5E92F6"
            android:inputType="phone"
            android:drawableRight="@drawable/ic_baseline_phone_iphone_24"
            android:singleLine="true"
            android:maxLength="10"/>

        <EditText
            android:id="@+id/signinPasswordEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="32dp"
            android:hint="Password"
            android:backgroundTint="#5E92F6"
            android:inputType="textPassword"
            android:drawableRight="@drawable/ic_baseline_lock_24"
            android:singleLine="true"
            android:maxLength="32"/>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/signinButton"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="32dp"
            android:text="LOGIN"
            android:textSize="16sp"
            app:cornerRadius="20dp" />

        <TextView
            android:id="@+id/signupTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign up"
            android:layout_marginVertical="16dp"
            android:textColor="@color/skyBlue"
            android:fontFamily="@font/roboto_bold"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>


</RelativeLayout>