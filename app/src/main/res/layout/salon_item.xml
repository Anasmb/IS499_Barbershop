<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/salonLogoImageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="2dp"
                android:src="@drawable/herry_poer"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp">

                <TextView
                    android:id="@+id/salonNameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="2dp"
                    android:text="HERRY POER"
                    android:fontFamily="@font/roboto_bold"
                    android:textSize="16dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/addressTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="2dp"
                    android:text="Prince Saud al faiasl, AL Rawdah, Riyadh. 23424, Saudi Arabia"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="10dp"
                    android:textColor="#898989"
                    android:lines="2"
                    android:maxLines="2"
                    android:maxEms="20"/>

                <TextView
                    android:id="@+id/distanceTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="2dp"
                    android:text="15.5 km"
                    android:fontFamily="@font/roboto_bold"
                    android:textSize="11dp"
                    android:drawableLeft="@drawable/ic_baseline_location_on_16"/>

                <TextView
                    android:id="@+id/ratingTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="2dp"
                    android:text="4.2"
                    android:fontFamily="@font/roboto_bold"
                    android:textSize="11dp"
                    android:drawableLeft="@drawable/ic_baseline_star_16"/>

            </LinearLayout>



        </LinearLayout>





    </RelativeLayout>

</androidx.cardview.widget.CardView>